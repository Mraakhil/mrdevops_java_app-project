pipeline {
    agent any
    tools {
        jdk 'jdk17'
    }
    environment {
        MAVEN_OPTS = '--add-opens jdk.compiler/com.sun.tools.javac.processing=ALL-UNNAMED'
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/imranmycloud/mrdevops_java_app-project.git', branch: 'main'
            }
        }
        stage('Build with Maven') {
            steps {
                sh 'mvn clean test'
            }
        }
    }
}
