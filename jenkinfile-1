@Library('my-shared-library') _

pipeline {
    agent any
    tools {
        maven 'Maven 3.9'   // must match Jenkins Global Tool Config name
        jdk 'JDK17'         // must match Jenkins JDK config name
    }
    stages {
        stage('Git Checkout') {
            steps {
                script {
                    gitCheckout(
                        branch: "main",
                        url: "https://github.com/imranmycloud/mrdevops_java_app-project.git"
                    )
                }
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Unit Test maven') {
            steps {
                script {
                    mvnTest()
                }
            }
        }
    }
}
