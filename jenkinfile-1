@Library('my-shared-library') _

pipeline {
    agent any 
     tools {
        jdk 'JDK11'  // Make sure you’ve added this in Jenkins → Global Tool Configuration

    stages {
        stage('Git Checkout') {     
            steps {
                script {
                    gitCheckout(
                        branch: "main",
                        url: "https://github.com/imranmycloud/mrdevops_java_app-project.git"
                    )
                }
            }
        }

        stage('Unit Test maven') {     
            steps {
                script {
                    mvnTest()
                }
            }
        }
    }
}
