@Library('my-shared-library') _

pipeline {
    agent any 
    stages {
        stage('Git Checkout') {     
            steps {
                script {
                    gitCheckout(
                        branch: "main",
                        url: "https://github.com/imranmycloud/mrdevops_java_app-project.git"
                    )
                }
            }
        }

        stage('Unit Test maven') {     
            steps {
                script {
                   sh 'mvn clean test --add-opens jdk.compiler/com.sun.tools.javac.processing=ALL-UNNAMED'
                }
            }
        }
    }
}
