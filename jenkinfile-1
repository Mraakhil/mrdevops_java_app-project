
@Library('my-shared-library') _

pipeline {
    agent any
    tools {
        jdk 'java17'     // Make sure this matches your JDK name in Jenkins Global Tool Config
        maven 'maven3'   // Your Maven tool name configured in Jenkins
    }
    stages {
        stage('Verify Java Version') {
            steps {
                sh 'java -version'
            }
        }
         stages {
        stage('Git Checkout') {     
            steps {
                script {
                    gitCheckout(
                        branch: "main",
                        url: "https://github.com/imranmycloud/mrdevops_java_app-project.git"
                    )
                }
            }
        stage('Unit Test maven') {
            steps {
                sh 'mvn clean test'
            }
        }
    }
}
