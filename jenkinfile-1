@Library('my-shared-library') _

pipeline {
    agent any

    tools {
        maven 'Maven 3.9'  // Name must match Jenkins Global Tool Configuration
        jdk 'JDK17'        // Name must match Jenkins JDK installation
    }

    stages {
        stage('Git Checkout') {
            steps {
                script {
                    gitCheckout(
                        branch: "main",
                        url: "https://github.com/imranmycloud/mrdevops_java_app-project.git"
                    )
                }
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Unit Test maven') {
            steps {
                script {
                    mvnTest()
                }
            }
        }
    }
}
