@Library('my-shared-library') _

pipeline{

    agent any
    tools {
        maven 'Maven 3.9.9'  // exact name from Global Tool Configuration
        jdk 'JDK17'        // make sure JDK17 is configured too
    }

    stages{
         
        stage('Git Checkout'){

            steps{
                 script{
                     gitCheckout(
                     branch: "main",
                     url: "https://github.com/imranmycloud/mrdevops_java_app-project.git"
             )
             
                }
            }
        }
         stage('Unit Test maven'){

            steps{
                 script{
                   mvnTest()
             
                }
            }
        }
    }
}
