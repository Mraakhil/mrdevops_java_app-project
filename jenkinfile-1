@Library('my-shared-library') _

pipeline {
    agent any
    tools {
        jdk 'java11'         // Name must match what you configured in Jenkins
        maven 'Maven'       // Or whatever name you've given your Maven tool
    }

    stages {
        stage('Git Checkout') {     
            steps {
                script {
                    gitCheckout(
                        branch: "main",
                        url: "https://github.com/imranmycloud/mrdevops_java_app-project.git"
                    )
                }
            }
        }

        stage('Unit Test maven') {     
            steps {
                script {
                    mvnTest()
                }
            }
        }
    }
}
